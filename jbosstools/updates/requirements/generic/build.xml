<?xml version="1.0" encoding="UTF-8"?>
<project default="run">
	<!-- run locally in Eclipse (to resolve p2 tasks) using these commandline options:
		export JAVA_HOME=/opt/jdk1.6.0; \
		${JAVA_HOME}/bin/java -cp ~/eclipse/plugins/org.eclipse.equinox.launcher_*.jar \
			org.eclipse.equinox.launcher.Main -vm ${JAVA_HOME} -consoleLog -nosplash -data /tmp \
			-application org.eclipse.ant.core.antRunner -f ~/RHDS/updates/requirements/PROJECTNAME/build.xml -Ddestination=/tmp/PROJECTNAME-repo
	-->
  <property name="SHORTNAME" value="SHORTNAME"/>
  <property name="LONGNAME" value="Long Name"/>
  <property name="version" value="VERSION"/>
  <property name="URL" value="URL" />
  
  <property name="destination" value="/home/nboldt/tru/download.jboss.org/jbosstools/updates/requirements/${SHORTNAME}/" />
  <property name="workDir" value="${destination}/${version}/"/>
  <property name="latestversiononly" value="true"/>

  <target name="run" depends="mirror">
    <ant antfile="${destination}/../regen.metadata.xml" target="pack.artifacts.and.regen.metadata"/>
  </target>
  <target name="mirror">
    <p2.mirror>
      <repository location="file:${workDir}" name="${LONGNAME} ${version}" format="${URL}"/>
      <source>
        <repository location="${URL}" />
      </source>
      <slicingOptions includeFeatures="true" followStrict="true" latestversiononly="${latestversiononly}"/>
    </p2.mirror>
  </target>
</project>
